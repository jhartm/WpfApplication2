<UserControl x:Class="WpfApplication2.PortElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="userControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Width="30" Height="30" Click="PopupClick" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
        <Popup x:Name="popup" 
               Width="60" Height="100"
               StaysOpen="True">
            <StackPanel Background="Black">
                <Button Content="One"/>
                <Button Content="Two"/>
            </StackPanel>
        </Popup>
    </Grid>
</UserControl>
